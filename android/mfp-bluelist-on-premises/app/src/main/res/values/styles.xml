<resources>
    <style name="BlueListTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/Title</item>
    </style>

    <style name="BlueListListStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_response</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToggleButton">
        <item name="android:onClick">onToggle</item>
        <item name="android:textColor">@drawable/text_toggle</item>
        <item name="android:background">@drawable/button_toggle</item>
    </style>

    <style name="PlusButton">
        <item name="android:background">@drawable/button_response</item>
    </style>

    <style name="addAlert">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialogButtons">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_response</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
